{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s?$": [
      "@swc/jest"
    ]
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1",
    "@core/(.*)": "<rootDir>/src/core/$1",
    "@application/(.*)": "<rootDir>/src/application/$1",
    "@domain/(.*)": "<rootDir>/src/domain/$1",
    "@infrastructure/(.*)": "<rootDir>/src/infrastructure/$1",
    "@/(.*)": "<rootDir>/src/$1"
  },
  "roots": ["<rootDir>/src"]
}